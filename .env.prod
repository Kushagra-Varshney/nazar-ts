# Production Environment Variables

# Node.js
NODE_ENV=production

# Application Ports
GATEWAY_PORT=3001
PORT=3000

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_CLIENT_ID=file-watcher-app
KAFKA_GROUP_ID=file-events-consumer

# Gateway Configuration
GATEWAY_URL=http://gateway-orchestrator:3001

# Database
DATABASE_PATH=/app/data/file_tracker.db

# API Configuration
ENABLE_API=true

# Security
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000

# File Watcher Configuration
WATCH_DIRECTORIES=/app/watched-files,/app/test-folder

# Retention Settings
KAFKA_LOG_RETENTION_HOURS=168
DB_CLEANUP_INTERVAL_HOURS=24
MAX_EVENTS_PER_HOST=100000